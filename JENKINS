        stage('Code Quality check') {
            steps {
                echo "Analyse the code"
                echo"Code analyse tool:-SonarQube"
                withSonarQubeEnv('sonarqube') {
                    bat 'mvn sonar:sonar'
                }
            }
        }
        // stage('Security scan'){
