pipeline{
    agent any
    // environment{
        
    // }

        

    stages{

        stage('Build'){
            steps{
                // echo "fetch the source code from ${DIRECTORY_PATH}"
                echo "Build the code using Maven"
                bat 'mvn clean package'
            }
        }
        stage('Test'){
            steps {
                bat 'mvn test'
            }
        }
        // stage('Unit and Integration Tests') {
        //     steps {
