        stage('Build Docker Image'){
            steps {
                echo 'Building Image'
                bat 'docker --version'
                bat 'docker build -t my-spring-boot-project .'
            }
        } 
        stage('Deploy to Staging') {
            steps {
                echo "deploy the application "
                bat 'docker-compose down'
                bat 'docker-compose up -d --build'
            }
        }     
    }     
